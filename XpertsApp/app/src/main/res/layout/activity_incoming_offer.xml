<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.xpertsapp.views.IncomingOfferActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrower Name"
        android:id="@+id/incomingBorrowerName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:layout_marginTop="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAS OFFERED"
        android:id="@+id/constantText"
        android:layout_below="@+id/incomingBorrowerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="225dp"
        android:id="@+id/borrowerServicesIn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/constantText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN EXCHANGE FOR YOUR SERVICE:"
        android:id="@+id/constantText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownerServicesIn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/constantText2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/declineButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DECLINE"
        android:id="@+id/declineButton"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:onClick="declineTrade"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        android:id="@+id/acceptButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:onClick="acceptTrade"/>

</RelativeLayout>
