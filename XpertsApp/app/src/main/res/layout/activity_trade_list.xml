<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.xpertsapp.views.TradeListActivity" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INCOMING"
        android:id="@+id/incomingButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="viewIncoming"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUTGOING"
        android:id="@+id/outgoingButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="viewOutgoing"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tradeListView"
        android:layout_below="@+id/incomingButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
