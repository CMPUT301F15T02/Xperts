<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="ca.ualberta.cs.xpertsapp.views.IncomingOfferActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrower Name"
        android:id="@+id/incomingBorrowerName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAS OFFERED"
        android:id="@+id/constantText"
        android:layout_below="@+id/incomingBorrowerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:id="@+id/borrowerServicesIn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/constantText"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN EXCHANGE FOR YOUR SERVICE(S):"
        android:id="@+id/constantText2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_below="@+id/borrowerServicesIn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownerServicesIn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/constantText2"
        android:layout_above="@+id/declineButton"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCEPT"
            android:textSize="14sp"
            android:id="@+id/acceptButton"
            android:background="@color/green"
            android:textColor="#aaffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DECLINE"
            android:id="@+id/declineButton"
            android:background="@color/red"
            android:textSize="14sp"
            android:textColor="#aaffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_weight="0.5" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPLETE"
        android:background="@color/green"
        android:textSize="14sp"
        android:id="@+id/completeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFER COUNTER TRADE"
        android:background="@color/yellow"
        android:textSize="14sp"
        android:textColor="#aaffffff"
        android:id="@+id/counterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
